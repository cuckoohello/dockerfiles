{
    "metamta.mail-adapter": "PhabricatorMailImplementationPHPMailerAdapter",
    "environment.append-paths": [
      "/usr/lib/git-core"
    ],
    "metamta.one-mail-per-recipient": ${ONE_MAIL_PER_RECIPIENT},
    "metamta.default-address": "${SMTP_USER}",
    "phpmailer.smtp-password": "${SMTP_PASSWORD}",
    "phpmailer.smtp-user": "${SMTP_USER}",
    "phpmailer.smtp-protocol": "${SMTP_PROTOCOL}",
    "phpmailer.smtp-port": ${SMTP_PORT},
    "phpmailer.smtp-host": "${SMTP_HOST}",
    "phpmailer.mailer": "smtp",
    "pygments.enabled": true,
    "mysql.host": "${MYSQL_HOST}",
    "mysql.user": "${MYSQL_USER}",
    "mysql.pass": "${MYSQL_PASS}",
    "phabricator.base-uri": "${PHABRICATOR_URL}",
    "diffusion.ssh-user": "git",
    "phd.user": "git",
    "diffusion.ssh-port": ${SSH_PORT},
    "repository.default-local-path": "/srv/repo",
    "phabricator.timezone": "${TZ}",
    "storage.local-disk.path": "/srv/data",
    "diffusion.allow-git-lfs": ${ALLOW_GIT_LFS},
    "phabricator.show-prototypes": ${SHOW_PROTOTYPES},
    "files.enable-imagemagick": ${ENABLE_IMAGEMAGIC},
    "mysql.port": "${MYSQL_PORT}"
}
